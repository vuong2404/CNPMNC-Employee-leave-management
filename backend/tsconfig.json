{
    "compilerOptions": {
      "target": "es2016",                                  
      "module": "commonjs",  
      "outDir": "dist",                              
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true, 
      "resolveJsonModule": true, 
      "types": ["reflect-metadata", "jest"],
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strict": true,                                      
      "skipLibCheck": true  
    }
}
